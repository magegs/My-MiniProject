<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".adminpanel">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:text="Magendran G.S"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/nameA"
                android:text="Admin"
                android:layout_below="@+id/name"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/user3"
                android:layout_alignParentRight="true"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

        </RelativeLayout>
        <GridLayout

            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="30dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="60dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
                android:background="#ffffff"
            >
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/managepro"
                    android:src="@drawable/mangepro"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView

                    android:layout_marginTop="12dp"
                    android:textColor=" #29a329"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Mange products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/manageorder"
                        android:src="@drawable/manageorder"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:text="Manage Orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/manageusers"
                        android:src="@drawable/manageusers"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"

                        android:text="Mange Users"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/managestock"
                        android:src="@drawable/mstock"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:text="Manage Stocks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/salesreport"
                        android:src="@drawable/salesreport"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"

                        android:text="Reports"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </GridLayout>
    </LinearLayout>

</ScrollView>