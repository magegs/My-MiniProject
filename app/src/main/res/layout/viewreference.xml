<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="120dp"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="15dp"

    android:background="#f2f2f2">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/userreport_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:text="Number"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TableLayout
            android:id="@+id/table_userreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userreport_number"


            android:layout_marginTop="5dp">

            <TableRow>

                <TextView
                    android:text="Refernce_Number"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/table_userrefnum"
                    android:text="-"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>

                <TextView
                    android:text="Points"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/table_userpoints"
                    android:text="-"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Total_Reference"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/table_totalref"
                    android:text="-"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>


        </TableLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>