<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Shipping_Address"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:text="Shipping Details"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:text="Total_Price"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/shipping_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_price"

        android:layout_marginTop="30dp"
        android:hint="Name"/>
    <EditText
        android:id="@+id/shipping_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_name"
        android:layout_marginTop="10dp"
        android:hint="Contact Number"/>
    <EditText
        android:id="@+id/shipping_addressline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_number"
        android:layout_marginTop="10dp"
        android:hint="Flat,House no.,Apartment"/>
    <EditText
        android:id="@+id/shipping_addressline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_addressline1"
        android:layout_marginTop="10dp"
        android:hint="Area,Colony,Street,Sector,Village"/>

    <EditText
        android:id="@+id/shipping_addressline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_addressline2"
        android:layout_marginTop="10dp"
        android:hint="LandMark e.g.near Loyola College"/>


    <EditText
        android:id="@+id/shipping_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_addressline3"
        android:layout_marginTop="10dp"
        android:hint="Pincode"/>



    <Spinner
        android:id="@+id/shipping_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_pincode"
        android:layout_marginTop="10dp"
        android:hint="Select State"/>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipping_state"
        android:layout_marginTop="10dp"
        android:text="Select Payment Mode"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_below="@id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
        android:id="@+id/radiobutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textSize="18dp"
        android:text="Online Payment"/>
        <RadioButton
            android:id="@+id/radiobutton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Cash On Delivery"/>

    </RadioGroup>






</RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_PlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"

        android:background="#ff6666"
        android:textAllCaps="false"

        android:padding="20dp"
        android:text="Place Order"
        android:textSize="18sp"
        android:layout_alignParentLeft = "true"

        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        />


</RelativeLayout>