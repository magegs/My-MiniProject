<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Managepro">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Manage Product"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <GridLayout

            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="30dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="60dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            android:background="#ffffff"
            >
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/addpro"
                    android:src="@drawable/addpro"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView

                    android:layout_marginTop="12dp"
                    android:textColor=" #29a329"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Add products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="60dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            android:background="#ffffff"
            >
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/viewpro"
                    android:src="@drawable/viewpro"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView

                    android:layout_marginTop="12dp"
                    android:textColor=" #29a329"
                    android:textStyle="bold"

                    android:textSize="18sp"
                    android:text="View Products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/updatepro"
                        android:src="@drawable/updatepro"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"
                        android:textColor=" #29a329"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Update products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/deletepro"
                        android:src="@drawable/deletepro"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:text="Delete Products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="60dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/blockpro"
                        android:src="@drawable/blockorders"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView

                        android:layout_marginTop="12dp"
                        android:textColor=" #29a329"
                        android:textStyle="bold"

                        android:textSize="18sp"
                        android:text="Block Products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </GridLayout>
    </LinearLayout>

</ScrollView>