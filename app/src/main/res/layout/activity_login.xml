<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="TODO" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id="@+id/loginmail"
        android:hint = "Enter_Email"
        android:layout_marginTop = "65dp"
        android:layout_below = "@+id/imageView"
        android:focusable = "true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:drawableLeft="@drawable/mail1"
        android:drawablePadding="5dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:inputType="number"
        android:layout_alignParentEnd = "true"/>
    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id="@+id/loginpass"
        android:hint = "Enter_Password"
        android:layout_marginTop = "25dp"
        android:layout_below = "@+id/loginmail"
        android:focusable = "true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:drawableLeft="@drawable/pass2"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"/>



    <LinearLayout
        android:id="@+id/linrar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/loginpass"
        android:layout_marginTop="7dp"
        >
        <CheckBox
            android:id="@+id/remember"
            android:text="Remember Me"


            android:textSize="16sp"
            android:layout_marginLeft="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgpass"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Forget Password...?"
            android:layout_marginLeft="35dp"
            android:textSize="18sp"/>


    </LinearLayout>
    <Button
        android:id="@+id/login1btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/linrar1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:background="@drawable/button2"
        android:textAllCaps="false"

        android:padding="17dp"
        android:text="Login"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/adminlink"
        android:layout_below="@+id/login1btn"
        android:text="I'm an Admin?"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="23dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/notadminlink"
        android:layout_below="@+id/login1btn"
        android:text="I'm not an Admin?"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    </RelativeLayout>
</ScrollView>